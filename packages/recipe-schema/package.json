    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "tsc-watch": "^4.6.1",
    "typescript-json-schema": "^0.53.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "rimraf": "~3.0.2",
    "typescript": "~4.6.0"
  }
}
